<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601} [%thread] %-5level %logger{10} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.verisign.vscc.hdfs.trumpet.client" level="TRACE"/>
    <logger name="com.verisign.vscc.monitoring" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>