<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_DIR" value="/opt/daplab/hive-auto-partitioner/logs" />

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/trumpet.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
          <fileNamePattern>${LOG_DIR}/hive-partitioner.%i.log.gz</fileNamePattern>
          <minIndex>1</minIndex>
          <maxIndex>10</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread] %logger{36} - %msg%n</pattern>
            <!-- <pattern>%date{ISO8601} %level [%thread] %logger{36} - %msg%n</pattern> -->
        </encoder>
    </appender>

    <logger name="ch.daplab.hivepartition" level="DEBUG"/>

    <logger name="com.verisign.vscc.hdfs.trumpet.client.InfiniteTrumpetEventStreamer" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>

</configuration>